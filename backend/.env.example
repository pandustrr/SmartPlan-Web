# ============================================
# SINGAPAY B2B PAYMENT GATEWAY CONFIGURATION
# ============================================

# Operating Mode
# Options: mock (local testing) | sandbox (staging) | production (live)
SINGAPAY_MODE=mock

# API Credentials (Get from Singapay Merchant Dashboard)
SINGAPAY_PARTNER_ID=your_partner_id_here
SINGAPAY_CLIENT_ID=your_client_id_here
SINGAPAY_CLIENT_SECRET=your_client_secret_here
SINGAPAY_MERCHANT_ACCOUNT_ID=your_merchant_account_id_here

# API Endpoints
SINGAPAY_SANDBOX_URL=https://sandbox-payment-b2b.singapay.id
SINGAPAY_PRODUCTION_URL=https://payment-b2b.singapay.id

# Webhook Configuration
SINGAPAY_WEBHOOK_ENABLED=true
SINGAPAY_WEBHOOK_SECRET=your_webhook_secret_here
SINGAPAY_WEBHOOK_URL=${APP_URL}/api/webhook/singapay/payment
SINGAPAY_WEBHOOK_SIGNATURE_VALIDATION=true
SINGAPAY_WEBHOOK_IP_WHITELIST=

# Virtual Account Settings
SINGAPAY_VA_EXPIRY_HOURS=24
SINGAPAY_VA_KIND=temporary
SINGAPAY_VA_MAX_USAGE=1
SINGAPAY_VA_BANKS=BRI,BNI,DANAMON,MAYBANK
SINGAPAY_VA_DEFAULT_BANK=BRI

# QRIS Settings
SINGAPAY_QRIS_EXPIRY_HOURS=1
SINGAPAY_QRIS_ENABLE_TIP=false

# Cache & Performance
SINGAPAY_CACHE_ENABLED=true
SINGAPAY_CACHE_TTL=3000
SINGAPAY_TIMEOUT=30

# Retry Configuration
SINGAPAY_RETRY_MAX_ATTEMPTS=3
SINGAPAY_RETRY_DELAY=1000

# Logging
SINGAPAY_LOGGING=true
SINGAPAY_LOG_CHANNEL=daily
SINGAPAY_LOG_LEVEL=info

# Mock Mode Settings (Only for SINGAPAY_MODE=mock)
SINGAPAY_MOCK_AUTO_APPROVE_DELAY=5
SINGAPAY_MOCK_SUCCESS_RATE=100
SINGAPAY_MOCK_RESPONSE_DELAY=1
SINGAPAY_MOCK_VERBOSE_LOGGING=true

# Feature Flags
SINGAPAY_ENABLE_QRIS=true
SINGAPAY_ENABLE_VIRTUAL_ACCOUNT=true
SINGAPAY_ENABLE_PAYMENT_LINK=false
SINGAPAY_ENABLE_DISBURSEMENT=false
